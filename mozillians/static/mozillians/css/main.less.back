    button[type=submit] {
        margin: 20px 0;
        .button;
    }
    textarea {
        @media (max-width: @breakMobileLandscape) {
            width: 80%;
        }
    }
    input { margin-bottom: 25px; }

    .card {
        float: left;
        margin-right: 30px;
